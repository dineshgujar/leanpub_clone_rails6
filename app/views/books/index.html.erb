<p id="notice"><%= notice %></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author price</th>
      <th>Selling price</th>
      <th>Book index</th>
      <th>About</th>
      <th>Book category</th>
      <th>Youtube link</th>
      <th>Retired</th>
      <th>Published</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author_price %></td>
        <td><%= book.selling_price %></td>
        <td><%= book.book_index %></td>
        <td><%= book.about %></td>
        <td><%= book.book_category %></td>
        <td><%= book.youtube_link %></td>
        <td><%= book.retired %></td>
        <td><%= book.published %></td>
        <td><%= book.user.name %></td>
        <td><%= link_to 'Show', book %></td>
        <% if current_user==book.user %>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
<% if current_user %>
  <%= link_to 'New Book', new_book_path %>
<% else %>
  <%= link_to "New Book", new_user_session_path%>
<% end %>
